{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "strict": true,
    "lib": ["dom", "es2015"],
    "esModuleInterop": true,
    "keyofStringsOnly": true,
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "Preserve",
    "types": ["./typings/react", "@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts"]
}